@model IEnumerable<string>

@{
    Layout = null;
}

@Html.ActionLink("Home","List","Product")

@foreach (var modelCategory in Model)
{
        //Similar to actionLink - but supply route in same syntax as mapRoute
        @Html.RouteLink(modelCategory, 
            new
                {
                    controller = "Product",
                    action = "List",
                    category = modelCategory,
                    Page = 1                                        
                },
             new
                {
                    @class = (modelCategory == ViewBag.SelectedCategory) ? "selected" : null                     
                }
        )
}