<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>

<body>
    <div id="header" >

    @if (IsSectionDefined("CartSummary"))
    {
        @RenderSection("CartSummary")
    }
    else
    {
        Html.RenderAction("Summary", "Cart");
    } 



@*    @this.RenderSectionWithDefault("CartSummary",{Html.RenderAction("Summary", "Cart");});
*@



        <div class="title">
        SPORTS STORE
        </div>
    </div>
    <div id="categories">
        @{
            //The route parameters from the URL are passed onto this controller too - so it can access the category value!
            Html.RenderAction("Menu", "Nav");
        }
    </div>
    <div id="content">
        @RenderBody()
    </div>
    
</body>
</html>
